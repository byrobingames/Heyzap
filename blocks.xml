    </block>
       
    <block tag="getAdInfoHeyzap" spec="Heyzap: Ad %0 [c:heyzap]" code="Heyzap.getAdInfo(~)" type="normal" color="charcoal" returns="boolean">
        <fields>
            <dropdown order="0">
				<choices>
					<c text="did successfully load" code="0"></c>
					<c text="did fail to load" code="1"></c>
					<c text="is Closed" code="2"></c>
					<c text="is clicked" code="3"></c>
				</choices>
			</dropdown>
        </fields>
