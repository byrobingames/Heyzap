    <block tag="showVideoHezap" spec="Heyzap: Show Video Ad [c:heyzap]" code="Heyzap.showVideo();" type="action" color="charcoal" returns="void">
        <fields>
        </fields>
    </block>
    
    <block tag="fetchRewardedVideoHezap" spec="Heyzap: Fetch Rewarded Video Ad [c:heyzap]" code="Heyzap.fetchRewardedVideo();" type="action" color="charcoal" returns="void">
