    <block tag="initHeyzap" spec="Initialize Heyzap with 'Publisher ID': %0 [c:heyzap]" code="Heyzap.init(~);" help="Inititalize Heyzap ads at the begin of your project!" type="action" color="charcoal" returns="void">
        <fields>
            <text order="0"></text>
        </fields>
