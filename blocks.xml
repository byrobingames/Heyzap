        <fields>
		<number order="0"></number>
		<number order="1"></number>
        </fields>
    </block>
    
    <block tag="fetchVideoHezap" spec="Heyzap: Fetch Video Ad [c:heyzap]" code="Heyzap.fetchVideo();" type="action" color="charcoal" returns="void">
        <fields>
